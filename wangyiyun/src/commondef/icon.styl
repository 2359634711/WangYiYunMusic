.plus {
  box-sizing : border-box;
  display    : inline-block;
  position   : relative;
  font-size  : 20px;
}

.plus:before, .plus:after {
  content        : '';
  pointer-events : none;
  position       : absolute;
  left           : 50%;
  top            : 50%;
  transform      : translate(-50%, -50%);
  box-shadow     : inset 0 0 0 1em;
}

.plus:before {
  width  : 1em;
  height : 2px;
}

.plus:after {
  height : 1em;
  width  : 2px;
}
